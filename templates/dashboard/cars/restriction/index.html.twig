{% extends 'dashboard.html.twig' %}

{% block form %}
        
<div class="title-header" style="">
Current items ({{list|length}})   
        <a href="/dashboard/restriction/add" class="pull-right" > Create new</a>
        </div>
        

<div class="documents-list">
{% if list is defined %}
<ul>
    {% for document in list %}
    <li>
        <a href="/dashboard/restriction/add/{{document.id}}">
        <div class ="col-md-12 document-item" >            
        <div class="row">
            <div class="col-md-8">                
                    <h4><span class="name">
                    <span class="fa fa-warning fa-2x"></span> {{document.description}}
                </span>
                </h4>                        
                    </div>
                        <div class="col-md-4">
                        <span class="name pull-right">
                        <h4>ZAR {{document.fine}}</h4>                   
                        </span>
                </div>
            </div>
        </div>
    </a>
</li>
    {% endfor %}
</ul>
{% endif %}
</div>

{% endblock %}
