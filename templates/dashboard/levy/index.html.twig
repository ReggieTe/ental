{% extends 'dashboard.html.twig' %}

{% block form %} 
					<h4> <small><a href="#" data-toggle="modal" data-target="#AddNewLevy" >Add New</a></small></h4>                    
				         <table id="missing-persons" class="table table-striped table-td-valign-middle">
								<thead>
									<tr>
										<th class="text-nowrap">Name</th>
									    <th class="text-nowrap">Description</th>
										<th class="text-nowrap">Amount</th>
										<th class="text-nowrap">Required</th>
									</tr>
								</thead>
								<tbody>
										{% for item in list %} 
										<tr  class="" >
											<td><a href="#" >{{item.name}}</a></td>
											<td><small>{{item.description}}</small></td>
											<td>{{item.amount}}%</td>
                                            <td>{% if item.mandatory %} Mandatory {% else %} <a href="/dashboard/profile/levy/delete/{{item.id}}" >Delete <span class="fa fa-trash text-success"></span></a> {% endif %}  </td>
											
										</tr>
										{% endfor %}
										</tbody>
				  			</table>                        							
						</div>
                  </div>


				  <div class="modal fade" id="AddNewLevy" tabindex="-1" role="dialog" aria-labelledby="UploadDocumentLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UploadDocumentLabel"><b>Add new levy</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">      	
                            <div class="upload-list-document">
                                <form  method="POST" action='{{path('AddNewLevy')}}'>
                                <select name="levy" class="form-control" title="document type" >
                                    <option value="" >Select levy</option>
                                        {% for levy in levies %} 
                                            <option value="{{levy.id}}">{{levy.name}} ({{levy.amount}}%)</option>
                                        {% endfor %}
                                    </select>

									<div class=" mb-3">
										<label>
											<input type="checkbox" name="active" checked="checked" disabled="disabled"> Applying with immediate effect
										</label>
									</div>
                                    <button type="submit"  class="btn btn-primary pull-right"><i class="fa fa-save"></i> Save</button> 
                                </form>                                                 
                            </div>
            </div>
            
            </div>
        </div>
      </section>
{% endblock %}
